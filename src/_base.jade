doctype html
html
  block vars
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    block title
      title PLEASE CHANGE THE TITIE

    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans')
    //-<!-- build:css static/bundle.css -->
    // bower:css
    link(rel='stylesheet', href='bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet', href='bower_components/bootstrap-material-design/dist/css/material.css')
    link(rel='stylesheet', href='bower_components/bootstrap-material-design/dist/css/ripples.css')
    link(rel='stylesheet', href='bower_components/animate.css/animate.css')
    // endbower
    link(rel='stylesheet', href='static/style.css')
    //-<!-- endbuild -->

    //-<!-- build:js static/bundle.js -->
    // bower:js
    script(src='bower_components/jquery/dist/jquery.js')
    script(src='bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='bower_components/bootstrap-material-design/dist/js/material.js')
    script(src='bower_components/bootstrap-material-design/dist/js/ripples.js')
    script(src='bower_components/wow.js/dist/wow.js')
    // endbower
    script(src='static/onload.js')
    //-<!-- endbuild -->

    block head

  body
    //- header
    #header.container
      a(href='/')
        img.img-responsive#brand-img(src='static/img/logo.png', alt='logo', width='55', height='55')
        span#brand St. Mark's School Alumni Association
      small
        ul.list-inline
          li: a(href='http://www.stmarks.edu.hk/newsms/') St. Mark's School
          li: a(href='links.html') Links
          li: a(href='#enews') e-news sign up
          li: a(href='contact.html') contact us
      a#fb-page(href='www.facbook.com'): img.img-responsive(src='static/img/fb_icon.png', alt='Facebook page', height='25', width='25')

    //- separator, blue
    .container
      div.back-color-blue
        br

    //- front photo
    .container#banner
      img.img-responsive(src= banner_image, alt='banner')

    //- desktop navbar
    .container
      nav.navbar.navbar-default
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            include _navbar.jade

    block body

    footer.footer
      .container.text-muted
        span Copyright &copy 2015 St. Mark's School Alumni Association Limited. All Right Reserved. /
        a(href='sitemap.html') site map
        span / web designed by Hollis and Eric
