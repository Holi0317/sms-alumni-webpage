extends ./_base.jade

block head
  link(rel='stylesheet', href='static/index.css')
  script(src='static/index.js')

block title
  title Alumni Association

block vars
  - var banner_image = 'static/img/banner_index.png'

block body
  .container
    .col-md-3
      //- Left bar
      .list-group#sub-nav
        a.list-group-item.active(href='#', data-bound-to='#exec-commitee') excutive commitee
        a.list-group-item(href='#', data-bound-to='#past-chair') past chairpersons
        a.list-group-item(href='#', data-bound-to='#honor-mem') honorable members

      br

      img#event-notice.img-responsive(src='static/img/index/event.png', alt='upcomming event')

      br

      #e-signup
        h3 e-news sign up
        // Change method to POST in production
        form(role='form', action='enews.html', method='GET')
          //- mixin for a form item. Requires id, display name and type as argument
          mixin form_item(iden, name, text)
            .form-group
              input.form-control(for= iden, id= iden, type= text, placeholder= name)
          +form_item('first-name', 'first name')
          +form_item('last-name', 'last name')
          +form_item('grad-year', 'year of graduation')
          +form_item('email', 'email', 'email')
          button.btn.btn-link.pull-right(type='submit') submit


    .col-md-9
      //- Content on right
      #exec-commitee.collapse.in
        //- Executive commitee Content
        img.img-responsive(src='static/img/index/exec-commitee.png', alt='Executive commitee photo')
        h3 2015-16 executive commitee
        table.table.table-striped
